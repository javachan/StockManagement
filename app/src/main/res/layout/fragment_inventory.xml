<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10dip"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="10dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:textSize="24dip"
        android:gravity="center"
        android:id="@+id/txtClinicsToBeStocked"
        android:text="@string/clinicstobestocked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_marginTop="10dip"
        android:layout_below="@+id/txtClinicsToBeStocked"
        android:id="@+id/rlClinic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/clinicList"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:text="Clinic A"
            android:textSize="24dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="24dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:layout_alignParentRight="true"
            android:text="Kenya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <ListView
        android:layout_marginTop="10dip"
        android:layout_below="@+id/rlClinic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

</RelativeLayout>