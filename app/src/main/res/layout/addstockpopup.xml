<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="Enter the number of items to be added"
        android:textSize="22dip"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="20dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:id="@+id/textView2" />

    <EditText
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginLeft="20dip"
        android:layout_marginBottom="20dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/itemsEditText" />
   <RelativeLayout
       android:layout_marginBottom="40dip"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <Button
           android:background="@color/okcallertabcolor"
           android:id="@+id/btnCancel"
           android:paddingLeft="20dip"
           android:paddingRight="20dip"
           android:layout_marginRight="20dip"
           android:layout_marginLeft="20dip"
           android:text="Cancel"
           android:textColor="@color/white_henry"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <Button
           android:textColor="@color/white_henry"
           android:background="@color/okcallereditaddresscolor"
           android:id="@+id/btnAddItems"
           android:paddingLeft="20dip"
           android:paddingRight="20dip"
           android:layout_marginRight="20dip"
           android:layout_marginLeft="20dip"
           android:text="Add Items"
           android:layout_alignParentRight="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
   </RelativeLayout>

</LinearLayout>