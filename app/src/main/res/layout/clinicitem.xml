<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:background="@color/white_henry"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/clinicName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dip"
                        android:text="Clinic A"
                        android:textSize="24dip" />

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="5dip"
                        android:text="Kenya"
                        android:textSize="14dip" />
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip">

            <RelativeLayout
                android:id="@+id/rlFirstMed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dip"
                    android:text="Nevarapine"
                    android:textSize="18dip" />

                <TextView
                    android:id="@+id/itemsNevarapine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="5dip"
                    android:textSize="14dip" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlFirstButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlFirstMed"
                android:layout_marginTop="10dip">

                <Button
                    android:id="@+id/btnNevarapineDispense"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:background="@color/okcallertabcolor"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:text="Dispense"
                    android:textAllCaps="true" />

                <Button
                    android:id="@+id/btnNevarapineAddStock"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:layout_alignParentRight="true"
                    android:background="@color/logingrey"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:text="Add Stock"
                    android:textAllCaps="true" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip">

            <RelativeLayout
                android:id="@+id/rlSecondMed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dip"
                    android:text="Stavudine"
                    android:textSize="18dip" />

                <TextView
                    android:id="@+id/itemsStavudine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="5dip"
                    android:textSize="14dip" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlSecondMed"
                android:layout_marginTop="10dip">

                <Button
                    android:id="@+id/btnStavudineAddStock"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:layout_alignParentRight="true"
                    android:background="@color/logingrey"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:text="Add Stock"
                    android:textAllCaps="true" />

                <Button
                    android:id="@+id/btnStavudineDispense"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/okcallertabcolor"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:text="Dispense"
                    android:textAllCaps="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip">

            <RelativeLayout
                android:id="@+id/rlThirdMed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dip"
                    android:text="Zidotabine"
                    android:textSize="18dip" />

                <TextView
                    android:id="@+id/itemsZidotabine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="5dip"
                    android:textSize="14dip" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlThirdMed"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip">

                <Button
                    android:id="@+id/btnZidotabineDispense"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:background="@color/okcallertabcolor"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:text="Dispense"
                    android:textAllCaps="true" />

                <Button
                    android:id="@+id/btnZidotabineAddStock"
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:layout_alignParentRight="true"
                    android:background="@color/logingrey"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:text="Add Stock"
                    android:textAllCaps="true" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>